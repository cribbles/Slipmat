<section class="record-info group">
  <figure class="record">
    <!-- placeholder -->
    <img src="<%= record.image() %>" class="cover">
  </figure>

  <div class="info">
    <h2 id="name">
      <b>
        <a href="#/artists/<%= record.artist().id %>" class="link">
          <%= record.artist().escape("name") %></a>
           – <%= record.escape("title") %>
      </b>
    </h2>
    <% if (record.label().id) { %>
      <div class="record-attr group" id="label">
        <span class="key">
          Label:
        </span>
        <span class="value">
          <a href="#/labels/<%= record.label().id %>" class="link">
            <%= record.label().escape("title") %></a>
            – <%= record.escape("cat_no") %>
        </span>
      </div>
    <% } %>
    <% if (record.country().name) { %>
    <div class="record-attr group" id="country">
      <span class="key">
        Country:
      </span>
      <span class="value">
        <a
          href="#/records/search?country=<%= record.country().name %>"
          class="link">
          <%= record.country().name %>
        </a>
      </span>
    </div>
    <% } %>
    <% if (record.has("year")) { %>
    <div class="record-attr group" id="year">
      <span class="key">
        Released:
      </span>
      <span class="value">
        <a
          href="#/records/search?year=<%= record.get("year") %>"
          class="link">
          <%= record.get("year") %>
        </a>
      </span>
    </div>
    <% } %>
    <% if (record.genres().length) { %>
      <div class="record-attr group" id="genres">
        <span class="key">
          Genres:
        </span>
        <span class="value">
      </div>
    <% } %>
  </div>
</section>
