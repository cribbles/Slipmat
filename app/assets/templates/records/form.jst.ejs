<figure class="form record-form">
  <div class="form-header">
    <%= record.isNew() ? "Add New Record" : "Edit Record" %>
  </div>
  <div class="form-main record-form-main">
    <figure class="form-image">
      <img src="<%= record.image() %>" id="form-image">
    </figure>

    <button class="button button-data button-form" id="upload">
      <%= record.isNew() ? "Upload Album Cover" : "Update Album Cover" %>
    </button>

    <input
      type="file"
      class="button button-data button-form"
      id="image-form">

    <hr>

    <label for="record_artist_name">
      <b>Artist</b> (required)
    </label>
    <input
    <% if (!record.isNew()) { %> disabled <% } %>
      type="text"
      name="record[artist_name]"
      value="<%= record.escape("artist_name") %>"
      id="record_artist_name"
      class="form record-form highlight">

    <label for="record_title"><b>Title</b> (required)</label>
    <input
    <% if (!record.isNew()) { %> disabled <% } %>
      type="text"
      name="record[title]"
      value="<%= record.escape("title") %>"
      id="record_title"
      class="form record-form highlight">

    <label for="record_label_name">
      Label
    </label>
    <input
      type="text"
      name="record[label_name]"
      value="<%= record.escape("label_name") %>"
      id="record_label_name"
      class="form record-form">

    <label for="record_country">Country</label>
    <select
      name="record[country_id]"
      id="record_country"
      class="form record-form">
      <option value="">None / Unknown</option>
    </select>

    <label for="record_cat_no">Cat #</label>
    <input
      type="text"
      name="record[cat_no]"
      value="<%= record.escape("cat_no") %>"
      id="record_cat_no"
      class="form record-form">

    <label for="record_year">Year</label>
    <input
      type="text"
      name="record[year]"
      value="<%= record.get("year") %>"
      id="record_year"
      class="form record-form">

    <label for="record_notes">Notes</label>
    <textarea
      name="record[notes]"
      id="record_notes"
      class="form record-form"><%= record.escape("notes") %></textarea>
  </div>
</figure>

<figure class="form tracklist-form">
</figure>

<figure class="form genre-form">
  <div class="form-header">
    Genres
  </div>
  <section class="genre-container group">
  </section>
</figure>

