<header class="profile-header">
  <section class="profile-navbar">
    <section class="navbar group">
      <section class="navbar-sidebar">
        <figure class="user-pic">
          <img src="<%= Slipmat.defaultUserImg %>" class="cover">
        </figure>
      </section>
      <section class="navbar-main group">
        <h2><%= user.escape("username") %></h2>
        <ul class="navbar-tabs group">
          <li>
            <a
              id="profile"
              class="tab"
              href="#/users/<%= user.id %>">Profile</a>
          </li>
          <li>
            <a
              id="collection"
              class="tab"
              href="#/users/<%= user.id %>/collection">Collection</a>
          </li>
          <li>
            <a
              id="wantlist"
              class="tab"
              href="#/users/<%= user.id %>/wantlist">Wantlist</a>
          </li>
        </ul>
      </section>
    </section>
  </section>
</header>
