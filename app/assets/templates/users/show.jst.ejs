<section class="profile-sidebar">
  <% if (user.has("location")) { %>
    <span><%= user.escape("location") %></span>
  <% } %>
  <span>Joined on <%= user.get("created_at") %></span>
  <% if (user.has("url")) { %>
    <span>
      <a href="<%= user.escape("url") %>">
        <%= user.escape("url") %>
      </a>
    </span>
  <% } %>
  <hr>

  <!-- placeholder -->
  <h2>Contributor Stats</h2>
  <ul class="sidebar-items">
    <li>
      In Collection
      <small class="sidebar-item-count">
        <%= user.collectedRecords().length %>
      </small>
    </li>
    <li>
      In Wantlist
      <small class="sidebar-item-count">
        <%= user.wantedRecords().length %>
      </small>
    </li>
    <li>
      Contributions
      <small class="sidebar-item-count">
        <%= user.contributedRecords().length %>
      </small>
    </li>
    <li>
      Reviews
      <small class="sidebar-item-count">28</small>
    </li>
  </ul>
</section>

<section class="profile-main">
</section>
